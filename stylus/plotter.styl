.check-label
  width 75%
  display block
  padding 1em
  border-radius .125em
  position relative
  color white
  opacity .6
  margin 0 auto 1em auto
  text-align center
  cursor pointer
  &::before
    content ""
    width 1em
    height 1em
    position absolute
    right -2em
    border 1px solid sortaDark
    background transparent
  &::after
    content ""
    width 1em
    height 1.5em
    position absolute
    right -2em
    top .5em
    border .5em solid
    border-left none
    border-top none
    transform rotate(45deg)
    opacity 0
  &:hover::after
    opacity .6

