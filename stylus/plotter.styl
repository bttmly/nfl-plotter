.demo-indicator
  transition bottom .5s linear
  position fixed
  bottom -100%
  left 0
  background rgba(255,255,255,.67)
  box-shadow 0 -2px 2px rgba(0,0,0,.25)
  width 100%
  height 2.5rem
  color liteGreen
  font-size .75rem
  font-weight bold
  line-height 2.5rem
