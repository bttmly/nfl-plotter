.information
  font-weight bold
  text-align center
  span:first-of-type
    padding-right 2rem

.faux-click
  width 1.25rem
  height 1.25rem
  background rgba(0,0,0,.33)
  border .125rem solid rgba(255,255,255,.33)
  border-radius 2rem
  position absolute
  transform-origin center center
  animation faux-click ease-in-out .75s forwards
  z-index 10000

@keyframes faux-click
  0%
    opacity 0
  5%
    opacity 1
    transform scale(1)
  20%
    transform scale(.5)
  40%
    transform scale(1)
  80%
    opacity 1
    transform scale(1)
  100%
    opacity 0
    transform scale(1.5)
  