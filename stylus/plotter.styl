      width 1rem
      height 1rem
      border-radius 1rem
      display inline-block
      line-height 2.5rem
      margin-right .5rem
      position relative
      top .25rem
      border .25rem solid liteGreen
      border-bottom-color transparent
      animation spin 1s linear infinite

.demo-active
