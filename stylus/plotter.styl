    bottom 0
    p:after
      content "running..."

.demo-complete
  .demo-indicator
    bottom 0
    p:after
      content "complete!"
    p:before
      border-bottom-color liteGreen
      background liteGreen
      animation none

// Styles for when highlight mode is active
.plotter-highlight-mode 
  body
    background #eee
  circle:not(.highlighted-dot)
    fill rgba(0,0,0,.25)
    &:hover
      transform scale(1)
  .pos-input:not(:checked) + .check-label
  .yr-input:not(:checked) + .check-label
    border 1px solid sortaDark
    background-color transparent
    color sortaDark
    pointer-events none
  .pos-input:checked
  .yr-input:checked
    & + .check-label
      background #fff
      &.blue-label
        color liteBlue
        border-color liteBlue
      &.purple-label
        color litePurple
        border-color litePurple
      &.red-label
        color liteRed
        border-color liteRed
      &.orange-label
        color liteOrange
        border-color liteOrange
      &.yellow-label
        color liteYellow
        border-color liteYellow
      &.green-label
        color liteGreen
        border-color liteGreen
      &.dark-label
        color sortaDark
        border-color sortaDark
      &::after
        border-color transparent
    
flat-label(color)
  background-color color
  border 1px solid transparent
  &::after
    border-color color
  &.highlighted
    background-color color !important
    color #fff !important
    &::after
      border-color color !important
      
inline-row(children)
  font-size 0
  > *
    font-size 1rem
    display inline-block
    width (100% / children)

.pos-input, .yr-input
  position absolute
  left -500rem
  &:focus + .check-label::after
    opacity .6
  &:checked + .check-label
  &:checked + .check-label::after
