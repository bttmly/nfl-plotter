  0%
    opacity 0
  5%
    opacity 1
    transform scale(1)
  20%
    transform scale(.5)
  40%
    transform scale(1)
  80%
    opacity 1
    transform scale(1)
  100%
    opacity 0
    transform scale(1.5)
  
